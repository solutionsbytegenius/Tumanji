@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@{
    ViewData["Title"] = "Home Page";
}
@if (String.IsNullOrEmpty(@Accessor.HttpContext?.Session.GetString("UserID")))
{

    <div class="Container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <center>
                   <Titolo>SpicyLand</Titolo>
                </center>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

    <div class="Container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/Images/Panini/164_desktop_it.png" class="d-block w-100" alt="1">
                        </div>
                        <div class="carousel-item">
                            <img src="/Images/Panini/164_desktop_it.png" class="d-block w-100" alt="2">
                        </div>
                        <div class="carousel-item">
                            <img src="/Images/Panini/164_desktop_it.png" class="d-block w-100" alt="3">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <div class="Container">
        <div class="row">
            <div class="col-md-12 bg-opacity-50">
                <MiniTitolo>Notizie</MiniTitolo>
                <ul class="list-unstyled ">
                    @if (Model != null)
                    {
                        <hr />
                        @foreach (var x in Model)
                        { 
                            <li class="media">
                                <img class="mr-3 w-25 h-25" src="/Images/Logo/logo.png" alt="Generic placeholder image">
                                <div class="media-body">
                                    <h5 class="mt-0 mb-1">@x.TitoloNotizia</h5>
                                    (@x.DataInserimento)
                                    <br />
                                    @x.CorpoNotizia;
                                </div>
                            </li>
                            <hr />
                        }
                    }

                </ul>
            </div>
        </div>
    </div>
}
else
{
    <Titolo>Ciao, @Accessor.HttpContext?.Session.GetString("UserName")</Titolo>
}