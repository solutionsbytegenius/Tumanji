@{
    ViewData["Title"] = "Notizie";
}
<div class="Container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <center>
                <Titolo>Notizie</Titolo>
            </center>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="table-responsive ">
            <table class="table table-striped table-light">
                <thead>
                    <tr>
                        <th>Titolo Notizia</th>
                        <th>Corpo</th>
                        <th>Data Inserimento</th>
                        <th>Attiva</th>
                        <th>Scaduta</th>
                        <th>Data Scadenza</th>
                        <th><button class="btn-success"><i class="bi bi-plus-circle"></i></button></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.TitoloNotizia</td>
                            <td>@x.CorpoNotizia</td>
                            <td>@x.DataInserimento</td>
                            <td>
                                @if (x.Visibile == true)
                                {
                                    <p>Attiva</p>
                                }
                                else
                                {
                                    <p>non attiva</p>
                                }
                            </td>
                            <td>
                                @if (x.Scaduta == true)
                                {
                                    <p>Scaduta</p>
                                }
                                else
                                {
                                }
                            </td>
                            <td>
                                @if (x.Scaduta == true)
                                {
                                    @x.ScadenzaNotizia;
                                }
                                else
                                {
                                }
                            </td>
                            <td>
                                <button class="btn-Primary"><i class="bi bi-pencil-square"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>