@{
	ViewData["Title"] = "Menù";
}
<script>
	$(document).ready(function () {
		$('#check1').change(function () {
			if (this.checked) {
				$('#DropDownBevanda').show();
			} else {
				$('#DropDownBevanda').hide();
			}
		});
	});

</script>
<div class="Container">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<center>
				<Titolo>Menù</Titolo>
			</center>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>
<br />

<div class="container">
	<div class="row">
		@foreach (var x in Model)
		{

			<div class="col-md-3">
				<div class="card" style="width: 18rem; margin-bottom:20px;">
					<img class="card-img-top" src="@x.PathImage" alt="Card image cap">
					<div class="card-body">
						<h5 class="card-title">@x.Nome</h5>
						<p class="card-text">€ @x.Prezzo</p>
						<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
							Dettagli
						</button>

					</div>
				</div>
			</div>
		}
	</div>
</div>

<!-- The Modal -->
<div class="modal fade" id="myModal">
	<div class="modal-dialog">
		<div class="modal-content">

			<!-- Modal Header -->
			<div class="modal-header">
				<h4 class="modal-title">Modal Heading</h4>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>

			<!-- Modal body -->
			<div class="modal-body">
				<img class="card-img-top" src="/Images/Panini/logo.png" alt="Card image cap">
				<p>Saro is Here!!!</p>
				<div class="row">
					<div class="col-md-5">
						<div class="form-check">
							<input class="form-check-input" type="checkbox" id="check1" name="Menuplus" value="something" />
							<label class="form-check-label">Menu+? (+ €2,50)</label>
						</div>
					</div>
					<div class="col-md-5">
						<div class="dropdown" id="DropDownBevanda" style="display:none;">
							<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
								Bevanda
							</button>
							<ul class="dropdown-menu">
								<li><a class="dropdown-item" href="#">Acqua Naturale</a></li>
								<li><a class="dropdown-item" href="#">Acqua Frizzante</a></li>
								<li><a class="dropdown-item" href="#">Coca-Cola</a></li>
								<li><a class="dropdown-item" href="#">Coca-Cola Zero</a></li>
								<li><a class="dropdown-item" href="#">Birra</a></li>
							</ul>
						</div>
						<div class="col-md-2"></div>
					</div>
				</div>

				<div class="form-group">
					<label for="Note">Note:</label>
					<textarea class="form-control" rows="3" id="Note" placeholder="Inserisci eventuali note..."></textarea>
				</div>
			</div>

			<!-- Modal footer -->
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-bs-dismiss="modal">Chiudi</button>
				<button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aggiungi al carrello</button>
			</div>

		</div>
	</div>
</div>


