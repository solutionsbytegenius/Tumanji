@model OrdineCollection
@{
    ViewData["Title"] = "Ordinazioni";
}
<div class="Container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <center>
                <Titolo>Ordinazioni</Titolo>
            </center>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<div class="PlaceHolderHere"></div>
<div class="container">
	<div class="row">
		<div class="table-responsive ">
			<table class="table table-striped table-light">
				<thead>
					<tr>
						<th>Cliente</th>
						<th>Ordine n°.</th>
						<th>Panino</th>
						<th>Quantità</th>
						<th>Note</th>
						<th>Status</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@if (Model.Any())
					{
						@foreach (var x in Model)
						{
							<tr>
								<td>@x.Cliente</td>
								<td>@x.numOrdine</td>
								<td>@x.Panino</td>
								<td>
									x @x.Quantita
								</td>
								<td>@x.Note</td>
								<td>
									@if (x.Consegnato == true)
									{
										<p>Consegnato</p>
									}
									else
									{
										@if (x.Annullato == true)
										{
											<p>Annullato</p>
										}
										else
										{
											<p>In lavorazione...</p>
										}
									}
								</td>
								<td>
									<button type="Button" class="btn btn-success"><i class="bi bi-check-lg"></i></button>
								</td>
								<td>
									<button type="Button" class="btn btn-danger">X</button>
								</td>
							</tr>
						}
					}
					else
					{
						<tr>
							<td colspan="8" class="dt-empty"><center>Nessun ordinazione presente...</center></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
