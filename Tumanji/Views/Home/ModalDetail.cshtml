@model PaninoEntity
<script>
	$(document).ready(function () {
		$('#check1').change(function () {
			if (this.checked) {
				$('#DropDownBevanda').show();
			} else {
				$('#DropDownBevanda').hide();
			}
		});
	});

</script>
<img class="card-img-top" src="/Images/Panini/logo.png" alt="Card image cap">
<p>@Model.Descrizione</p>
<p>€ @Model.Prezzo</p>
<div class="row">
	<div class="col-md-5">
		<div class="form-check">
			<input class="form-check-input" type="checkbox" id="check1" name="Plus" value="something" />
			<label class="form-check-label">Menu+? (+ €2,50)</label>
		</div>
	</div>
	<div class="col-md-5">
		<div class="dropdown" id="DropDownBevanda" style="display:none;" name="Bevanda">
			<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
				Bevanda
			</button>
			<ul class="dropdown-menu">
				<li><a class="dropdown-item" href="#" name="Bevanda">Acqua Naturale</a></li>
				<li><a class="dropdown-item" href="#" name="Bevanda">Acqua Frizzante</a></li>
				<li><a class="dropdown-item" href="#" name="Bevanda">Coca-Cola</a></li>
				<li><a class="dropdown-item" href="#" name="Bevanda">Coca-Cola Zero</a></li>
				<li><a class="dropdown-item" href="#">Birra</a></li>
			</ul>
		</div>
		<div class="col-md-2"></div>
	</div>
</div>

<div class="form-group">
	<label for="Note">Note:</label>
	<textarea class="form-control" rows="3" name="Note" id="Note" placeholder="Inserisci eventuali note..."></textarea>
</div>